<%- include ./partials/header %>

    <div class="container">
        <div class="page-header">
            <h1>Dashboard</h1>
        </div>
        
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>URL</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            <% links.forEach(function(link) { %>
                <tr>
                    <td><%= link.title %></td>
                    <% if (link.url.length < 60) { %>
                        <td><a href="<%= link.url %>" target="_blank"><%= link.url %></a></td>
                    <% } else { %>
                        <td><a href="<%= link.url %>" target="_blank"><%= link.url.substr(0, 60) + '...' %></a></td>
                    <% } %>
                    <td>
                        <a href="/dashboard/<%= link.id %>/edit" class="btn btn-warning btn-xs">Edit</a>
                        <form action="/dashboard/<%= link.id %>?_method=DELETE" method="POST">
                            <button type="submit" class="btn btn-danger btn-xs">Delete</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
            </tbody>
        </table>
        
        <a class="btn btn-primary" href="/dashboard/new">Add Link</a>
    </div>
    
<%- include ./partials/footer %>