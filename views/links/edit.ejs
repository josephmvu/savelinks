<%- include ../partials/header %>

    <div class="container">
        <div class="page-header">
            <h1>Edit <%= link.title %></h1>
        </div>
        
        <form action="/dashboard/<%= link.id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label>Title</label>
                <input type="text" class="form-control" name="title" value="<%= link.title %>" placeholder="title" required>
            </div>
            <div class="form-group">
                <label>URL</label>
                <input type="url" class="form-control" name="url" value="<%= link.url %>" placeholder="https:// - paste URL here" required>
            </div>
            <div class="form-group">
                <label>List</label>
                <input type="text" class="form-control" name="list" value="<%= link.list %>" placeholder="List">
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
        </form>
        <hr>
        <a href="/dashboard">Go back</a>
    </div>
    
<%- include ../partials/footer %>