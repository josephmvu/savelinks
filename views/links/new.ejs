<%- include ../partials/header %>

    <div class="container">
        <div class="page-header">
            <h1>Add Link</h1>
        </div>
        
        <form action="/dashboard" method="POST">
            <div class="form-group">
                <label>Title</label>
                <input type="text" class="form-control" name="title" placeholder="title" required autofocus>
            </div>
            <div class="form-group">
                <label>URL</label>
                <input type="url" class="form-control" name="url" placeholder="https:// - paste URL here" required>
            </div>
            <div class="form-group">
                <label>List</label>
                <input type="text" class="form-control" name="list" placeholder="List">
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
    
<%- include ../partials/footer %>